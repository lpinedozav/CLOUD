@page
@model CLOUD.Pages.SolicitarModel
@{
    ViewData["Title"] = "Solicitar libro";
}

<h2 class="formulario-titulo">Registrar nuevo préstamo</h2>

<form method="post">
    <label for="run">RUN del usuario:</label>
    <input type="text" asp-for="Run" required maxlength="10" pattern="\d{7,9}" />

    <label for="nombre">Nombre completo:</label>
    <input type="text" asp-for="NombreUsuario" required />

    <label for="id_libro">Libro a prestar:</label>
    <select asp-for="IdLibro" required>
        <option value="">Selecciona un libro</option>
        @foreach (var libro in Model.LibrosDisponibles)
        {
            <option value="@libro.IdLibro">@libro.IdLibro - @libro.NombreLibro (@libro.Autor)</option>
        }
    </select>

    <label for="fecha_prestamo">Fecha del préstamo:</label>
    <input type="date" asp-for="FechaPrestamo" required value="03/07/2025"/>

    <label for="fecha_devolucion">Fecha de devolución:</label>
    <input type="date" asp-for="FechaDevolucion" required value="03/07/2025" />

    <input type="submit" value="Registrar préstamo" />
</form>

<style>
    form {
        max-width: 600px;
        margin: 20px auto;
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    label {
        font-weight: bold;
        display: block;
        margin-top: 15px;
    }

    input, select {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border: 1px solid #ccc;
        border-radius: 6px;
    }

        input[type="submit"] {
            background-color: #0074cc;
            color: white;
            margin-top: 20px;
            border: none;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #005da3;
            }

    .formulario-titulo {
        text-align: center;
        margin-top: 30px;
        color: #003366;
    }
</style>
